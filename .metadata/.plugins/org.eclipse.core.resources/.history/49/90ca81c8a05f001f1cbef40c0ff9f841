package dao.guest;

import java.sql.Connection;
import java.sql.PreparedStatement;

import dao.common.DataSource;

public class GuestDao {
	
	private DataSource dataSource;
	
	public GuestDao() throws Exception {
		this.dataSource = new DataSource();
	}
	
	
	public int insert(Guest guest) throws Exception {
		Connection con = dataSource.getConnection();
		PreparedStatement pstmt = con.prepareStatement(GuestSQL.GUEST_INSERT);
		
		pstmt.setString(1, guest.getName());
		pstmt.setString(2, guest.getEmail());
		pstmt.setString(3, guest.getHomepage());
		pstmt.setString(4, guest.getTitle());
		pstmt.setString(5, guest.getContent());
		int rowCount = pstmt.executeUpdate();
		
		pstmt.close();
		dataSource.close(con);
		
		return rowCount;
	}
}
